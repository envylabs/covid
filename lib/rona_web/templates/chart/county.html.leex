<div class="chart">
  <h3><%= @county.name %></h3>
  <div id="chart-<%= @county.fips %>" phx-hook="AreaChart" phx-update="ignore" data-chartdata="<%= @chart_data %>" data-max="<%= @max_value %>" data-color-scheme=1></div>
  <span class="has-swatch">
    <span class="swatch"><span style="background: rgb(137, 209, 188)"></span><%= Number.Delimit.number_to_delimited(@total_cases, precision: 0) %></span>
    <span class="swatch"><span style="background: rgb(0, 69, 27)"></span><%= Number.Delimit.number_to_delimited(@total_deaths, precision: 0) %></span>
  </span>
</div>
